<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingRight="25dp"
    android:paddingBottom="20dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="26dp"
        android:text="Name"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edtName"
        android:layout_below="@+id/edtName"
        android:layout_marginTop="15dp"
        android:ems="10" />

    <EditText
        android:id="@+id/edtPasswordFirst"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edtEmail"
        android:layout_below="@+id/edtEmail"
        android:layout_marginTop="4dp"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtEmail"
        android:layout_alignBottom="@+id/edtEmail"
        android:layout_alignLeft="@+id/textView1"
        android:text="Email"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtPasswordFirst"
        android:layout_alignBottom="@+id/edtPasswordFirst"
        android:layout_alignLeft="@+id/TextView01"
        android:text="Password"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtPasswordSecond"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/edtPasswordFirst"
        android:layout_below="@+id/edtPasswordFirst"
        android:layout_marginTop="5dp"
        android:ems="10" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtPasswordSecond"
        android:layout_alignBottom="@+id/edtPasswordSecond"
        android:layout_alignLeft="@+id/TextView02"
        android:text="Password"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/TextView03"
        android:layout_below="@+id/edtPasswordSecond"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="14dp"
        android:text="Enter" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/btnEnter"
        android:layout_alignBottom="@+id/btnEnter"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/btnEnter"
        android:text="Cancel" />

</RelativeLayout>