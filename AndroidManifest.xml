<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matchgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoundOne"
            android:label="@string/title_activity_round1" >
            
        </activity>
        <activity
            android:name=".RoundTwo"
            android:label="@string/title_activity_round2" >
            
        </activity>
        <activity
            android:name=".RoundThree"
            android:label="@string/title_activity_round3" >
            
        </activity>
        <activity
            android:name=".GameOver"
            android:label="@string/title_activity_game_over" >
            
        </activity>
        <activity
            android:name=".GamePlay"
            android:label="@string/title_activity_game_play" >
            
        </activity>
        
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
            
        </activity>
        
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>